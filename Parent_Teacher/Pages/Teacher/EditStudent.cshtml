@page "{id:int}"
@model Parent_Teacher.Pages.Teacher.EditStudentModel
@{
    ViewData["Title"] = "Edit Student";
}

<style>
    .container {
        max-width: 800px;
        margin: auto;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
    }

    h1 {
        color: #343a40;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        border: 1px solid #ced4da;
        border-radius: 4px;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        margin-right: 10px;
        text-decoration: none;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0069d9;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<div class="container">
    <h1>Edit Student</h1>

    @if (Model.Student != null)
    {
        <form method="post">
            <input type="hidden" asp-for="Student.Id" />

            <div class="form-group">
                <label asp-for="Student.FirstName"></label>
                <input asp-for="Student.FirstName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Student.LastName"></label>
                <input asp-for="Student.LastName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Student.Course"></label>
                <select asp-for="Student.Course" asp-items="Model.CourseList" class="form-control" id="CourseDropdown">
                    <option value="">-- Select Course --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Student.Section"></label>
                <select asp-for="Student.Section" class="form-control" id="SectionDropdown">
                    <option value="">-- Select Section --</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="/Teacher/Students" class="btn btn-secondary">Cancel</a>
        </form>
    }
    else
    {
        <div class="alert alert-danger">Student not found.</div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var courseDropdown = document.getElementById("CourseDropdown");
            var sectionDropdown = document.getElementById("SectionDropdown");

            function loadSections(selectedCourse, selectedSection) {
                fetch(`?handler=Sections&course=${selectedCourse}`)
                    .then(response => response.json())
                    .then(data => {
                        sectionDropdown.innerHTML = '<option value="">-- Select Section --</option>';
                        data.forEach(section => {
                            var option = document.createElement("option");
                            option.value = section;
                            option.text = section;
                            if (section === selectedSection) {
                                option.selected = true;
                            }
                            sectionDropdown.appendChild(option);
                        });
                    });
            }

            // Load sections on page load with preselected values
            var initialCourse = courseDropdown.value;
            var initialSection = "@Model.Student.Section";
            if (initialCourse) {
                loadSections(initialCourse, initialSection);
            }

            // Update sections on course change
            courseDropdown.addEventListener("change", function () {
                loadSections(this.value, "");
            });
        });
    </script>
}