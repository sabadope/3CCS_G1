    <script>
        // 🔧 This function handles tab and button logic
        function setToggleText(role) {
            const allTabs = [
                "design-tab", "marketing-tab", "finance-tab", "music-tab",
                "education-tab", "extra-tab", "eextra-tab", "eeextra-tab"
            ];
            const allTabPanes = [
                "design-tab-pane", "marketing-tab-pane", "finance-tab-pane", "music-tab-pane",
                "education-tab-pane", "extra-tab-pane", "eextra-tab-pane", "eeextra-tab-pane"
            ];

            const tabRules = {
                "Admin": ["design-tab", "marketing-tab"],
                "Company": ["extra-tab", "finance-tab", "music-tab"],
                "Student": ["education-tab", "eextra-tab", "eeextra-tab"]
            };

            // Match visible role to the button label
            const textToRole = {
                "Admin": "Admin",
                "Teacher": "Company",
                "Parent": "Student"
            };

            // 🔥 Highlight the active button
            document.querySelectorAll(".toggle-selection .btn").forEach(button => {
                const btnRole = textToRole[button.innerText.trim()];
                const isActive = btnRole === role;

                button.classList.toggle("btn-primary", isActive);       // Filled look
                button.classList.toggle("btn-outline-primary", !isActive); // Outline look
            });

            // 🔁 Control tab visibility
            const visibleTabs = tabRules[role] || [];

            allTabs.forEach(tab => {
                const tabElement = document.getElementById(tab);
                if (tabElement) {
                    tabElement.style.display = visibleTabs.includes(tab) ? "block" : "none";
                    tabElement.classList.remove("active");
                }
            });

            allTabPanes.forEach(pane => {
                const paneElement = document.getElementById(pane);
                if (paneElement) {
                    paneElement.classList.remove("active", "show");
                }
            });

            // ✅ Activate first tab for selected role
            if (visibleTabs.length > 0) {
                const firstTab = document.getElementById(visibleTabs[0]);
                const firstPane = document.getElementById(`${visibleTabs[0]}-pane`);

                if (firstTab) {
                    firstTab.classList.add("active");
                    firstTab.click();
                }

                if (firstPane) {
                    firstPane.classList.add("active", "show");
                }
            }
        }

        // ✅ Set default on page load
        document.addEventListener("DOMContentLoaded", function () {
            setToggleText("Admin");
        });
    </script>


