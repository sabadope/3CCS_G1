@{
    Layout = null;
    ViewData["Title"] = "Parent Feedback";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Parent Feedback - Taguig City University</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        body {
            background-color: #1c1c1c;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            background-color: #f5f5f5;
            padding: 50px 30px;
            min-height: 100vh;
            width: 270px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.05);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .sidebar img {
                width: 160px;
                margin-bottom: 60px;
            }

            .sidebar a {
                display: block;
                width: 100%;
                margin-bottom: 30px;
                text-decoration: none;
                font-weight: bold;
                font-size: 1.1rem;
                padding: 16px;
                text-align: center;
                border-radius: 12px;
                border: 2px solid #7c0a02;
                color: #7c0a02;
                transition: all 0.3s ease;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    background-color: #7c0a02;
                    color: white;
                }

        .content {
            background-color: #ffffff;
            margin-left: 30px;
            flex-grow: 1;
            padding: 50px;
            width: 100%;
        }

        .header {
            background-color: #7c0a02;
            color: white;
            padding: 30px;
            text-align: center;
            border-radius: 12px;
        }

        .feedback-form {
            margin-top: 30px;
        }

            .feedback-form .form-label {
                font-weight: 600;
            }

        .form-control, .form-select {
            border-radius: 10px;
            padding: 12px;
        }

        .btn-submit {
            background-color: #7c0a02;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 10px;
            margin-top: 20px;
        }

            .btn-submit:hover {
                background-color: #660000;
            }

        .feedback-history {
            margin-top: 50px;
        }

            .feedback-history table {
                width: 100%;
            }

            .feedback-history th, .feedback-history td {
                padding: 15px;
                text-align: center;
                border: 1px solid #ccc;
            }

            .feedback-history th {
                background-color: #f5f5f5;
            }

            .feedback-history td {
                background-color: #fff;
            }

        .bi-chat-dots {
            color: #7c0a02;
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            
            <img src="~/images/TCU icon.png" alt="TCU Logo" />
            <a href="~/Home">HOME</a>
            <a href="Dashboard">DASHBOARD</a>
            <a href="Notification1">NOTIFICATION</a>
            <a href="Messages">MESSAGES</a>
            <a href="Assignment">ASSIGNMENT</a>
            <a class="active" href="ParentFeedback">PARENT-FEEDBACK</a>
            <a href="#">LOGOUT</a>
        </div>

        <!-- Content -->
        <div class="content">
            <div class="header">
                <h2><i class="bi bi-chat-dots"></i> Parent Feedback</h2>
                <p>Collect and review feedback submitted by parents or guardians</p>
            </div>

            <div class="feedback-form">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Parent/Guardian Name</label>
                        <input type="text" class="form-control" placeholder="Enter name">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Relationship to Student</label>
                        <select class="form-select">
                            <option selected disabled>Select</option>
                            <option>Mother</option>
                            <option>Father</option>
                            <option>Guardian</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Feedback Message</label>
                        <textarea class="form-control" rows="5" placeholder="Write feedback here..."></textarea>
                    </div>

                    <button type="submit" class="btn btn-submit">Submit Feedback</button>
                </form>
            </div>

            <div class="feedback-history">
                <h4 class="mt-5 mb-3">Recent Feedback</h4>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Parent Name</th>
                            <th>Relationship</th>
                            <th>Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>April 10, 2025</td>
                            <td>Maria Santos</td>
                            <td>Mother</td>
                            <td>Thank you for supporting our child's growth. The teachers have been doing great.</td>
                        </tr>
                        <tr>
                            <td>April 9, 2025</td>
                            <td>Jose Dela Cruz</td>
                            <td>Father</td>
                            <td>We appreciate the recent communication about the school events.</td>
                        </tr>
                        <!-- More rows can be added dynamically -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
