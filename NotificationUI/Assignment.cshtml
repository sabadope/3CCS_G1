@{
    Layout = null;
    ViewData["Title"] = "Assignments";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Assignments - Taguig City University</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #1c1c1c;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            background-color: #f5f5f5;
            padding: 50px 30px;
            min-height: 100vh;
            width: 270px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.05);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .sidebar img {
                width: 160px;
                margin-bottom: 60px;
            }

            .sidebar a {
                display: block;
                width: 100%;
                margin-bottom: 30px;
                text-decoration: none;
                font-weight: bold;
                font-size: 1.1rem;
                padding: 16px;
                text-align: center;
                border-radius: 12px;
                border: 2px solid #7c0a02;
                color: #7c0a02;
                transition: all 0.3s ease;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    background-color: #7c0a02;
                    color: white;
                }

        .content {
            background-color: #ffffff;
            margin-left: 30px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .header {
            background-color: #7c0a02;
            color: white;
            padding: 40px;
            text-align: center;
        }

        .assignments-section {
            padding: 40px;
            background-color: #fff;
        }

        .assignment-card {
            border: 1px solid #ccc;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: 0 3px 8px rgba(0,0,0,0.05);
            transition: 0.3s ease;
        }

            .assignment-card:hover {
                background-color: #f9f9f9;
            }

        .assignment-title {
            font-size: 1.3rem;
            font-weight: 600;
        }

        .assignment-meta {
            font-size: 0.9rem;
            color: #555;
            margin-top: 8px;
            margin-bottom: 12px;
        }

        .assignment-desc {
            font-size: 1rem;
            color: #333;
        }

        .btn-submit {
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <img src="~/images/TCU icon.png" alt="TCU Logo" />
            <a href="~/Home">HOME</a>
            <a href="Dashboard">DASHBOARD</a>
            <a href="Notification1">NOTIFICATION</a>
            <a href="Messages">MESSAGES</a>
            <a class="active" href="Assignment">ASSIGNMENT</a>
            <a href="Parentfeedback">PARENT-FEEDBACK</a>
            <a href="#">LOGOUT</a>
        </div>

        <!-- Content -->
        <div class="content">
            <div class="header">
                <h2>Assignments</h2>
                <p>View, download, and submit your tasks here.</p>
            </div>

            <div class="assignments-section">
                <div class="assignment-card">
                    <div class="assignment-title">Math Homework - Algebra Basics</div>
                    <div class="assignment-meta">Due: April 15, 2025 | Instructor: Mr. Santos</div>
                    <div class="assignment-desc">Solve all exercises from Chapter 2. Submit a photo or PDF of your answers.</div>
                    <a href="#" class="btn btn-outline-dark btn-sm mt-3">Download Instructions</a>
                    <button class="btn btn-dark btn-sm btn-submit">Submit Assignment</button>
                </div>

                <div class="assignment-card">
                    <div class="assignment-title">English Essay - Personal Narrative</div>
                    <div class="assignment-meta">Due: April 20, 2025 | Instructor: Ms. Cruz</div>
                    <div class="assignment-desc">Write a 500-word essay about a memorable experience. Format in PDF.</div>
                    <a href="#" class="btn btn-outline-dark btn-sm mt-3">Download Instructions</a>
                    <button class="btn btn-dark btn-sm btn-submit">Submit Assignment</button>
                </div>

                <div class="assignment-card">
                    <div class="assignment-title">Science Project - Volcano Model</div>
                    <div class="assignment-meta">Due: April 22, 2025 | Instructor: Mr. Reyes</div>
                    <div class="assignment-desc">Build a working volcano model using materials provided in class.</div>
                    <a href="#" class="btn btn-outline-dark btn-sm mt-3">Download Instructions</a>
                    <button class="btn btn-dark btn-sm btn-submit">Submit Assignment</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
