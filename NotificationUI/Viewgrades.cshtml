@{
    Layout = null;
    ViewData["Title"] = "View Grades";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>View Grades - Taguig City University</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #1c1c1c;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            background-color: #f5f5f5;
            padding: 50px 30px;
            min-height: 100vh;
            width: 270px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.05);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .sidebar img {
                width: 160px;
                margin-bottom: 60px;
            }

            .sidebar a {
                display: block;
                width: 100%;
                margin-bottom: 30px;
                text-decoration: none;
                font-weight: bold;
                font-size: 1.1rem;
                padding: 16px;
                text-align: center;
                border-radius: 12px;
                border: 2px solid #7c0a02;
                color: #7c0a02;
                transition: all 0.3s ease;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    background-color: #7c0a02;
                    color: white;
                }

        .content {
            background-color: #ffffff;
            margin-left: 30px;
            flex-grow: 1;
            padding: 50px;
            width: 100%;
        }

        .header {
            background-color: #7c0a02;
            color: white;
            padding: 30px;
            text-align: center;
            border-radius: 12px;
        }

        .grades-table {
            margin-top: 30px;
        }

            .grades-table table {
                width: 100%;
            }

            .grades-table th, .grades-table td {
                padding: 15px;
                text-align: center;
                border: 1px solid #ccc;
            }

            .grades-table th {
                background-color: #f5f5f5;
            }

            .grades-table td {
                background-color: #fff;
            }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <img src="~/images/TCU icon.png" alt="TCU Logo" />
            <a href="~/Home">HOME</a>
            <a class="active" href="Dashboard">DASHBOARD</a>
            <a href="Notification1">NOTIFICATION</a>
            <a href="Messages">MESSAGES</a>
            <a href="Assignment">ASSIGNMENT</a>
            <a href="Parentfeedback">PARENT-FEEDBACK</a>
            <a href="#">LOGOUT</a>
        </div>

        <!-- Content -->
        <div class="content">
            <div class="header">
                <h2>View Grades</h2>
                <p>Review your performance for each subject</p>
            </div>

            <div class="grades-table mt-4">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Subject</th>
                            <th>Midterm Grade</th>
                            <th>Final Grade</th>
                            <th>Remarks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>English Communication</td>
                            <td>89</td>
                            <td>91</td>
                            <td>Passed</td>
                        </tr>
                        <tr>
                            <td>Computer Programming</td>
                            <td>95</td>
                            <td>92</td>
                            <td>Passed</td>
                        </tr>
                        <tr>
                            <td>Mathematics</td>
                            <td>85</td>
                            <td>87</td>
                            <td>Passed</td>
                        </tr>
                        <tr>
                            <td>Philosophy</td>
                            <td>88</td>
                            <td>90</td>
                            <td>Passed</td>
                        </tr>
                        <!-- Add more rows if needed -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
