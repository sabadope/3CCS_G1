@{
    Layout = null;
    ViewData["Title"] = "Set Appointment";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Set Appointment - Taguig City University</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #1c1c1c;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            background-color: #f5f5f5;
            padding: 50px 30px;
            min-height: 100vh;
            width: 270px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.05);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .sidebar img {
                width: 160px;
                margin-bottom: 60px;
            }

            .sidebar a {
                display: block;
                width: 100%;
                margin-bottom: 30px;
                text-decoration: none;
                font-weight: bold;
                font-size: 1.1rem;
                padding: 16px;
                text-align: center;
                border-radius: 12px;
                border: 2px solid #7c0a02;
                color: #7c0a02;
                transition: all 0.3s ease;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    background-color: #7c0a02;
                    color: white;
                }

        .content {
            background-color: #ffffff;
            margin-left: 30px;
            flex-grow: 1;
            padding: 50px;
            width: 100%;
        }

        .header {
            background-color: #7c0a02;
            color: white;
            padding: 30px;
            text-align: center;
            border-radius: 12px;
        }

        .form-section {
            margin-top: 30px;
        }

        .form-control, .form-select {
            border-radius: 10px;
            padding: 12px;
        }

        .form-label {
            font-weight: 600;
        }

        .btn-submit {
            background-color: #7c0a02;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 10px;
            margin-top: 20px;
        }

            .btn-submit:hover {
                background-color: #660000;
            }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <img src="~/images/TCU icon.png" alt="TCU Logo" />
            <a href="~/Home">HOME</a>
            <a class="active" href="Dashboard">DASHBOARD</a>
            <a href="Notification1">NOTIFICATION</a>
            <a href="Messages">MESSAGES</a>
            <a href="Assignment">ASSIGNMENT</a>
            <a href="Parentfeedback">PARENT-FEEDBACK</a>
            <a href="#">LOGOUT</a>
        </div>

        <!-- Content -->
        <div class="content">
            <div class="header">
                <h2>Set Appointment</h2>
                <p>Schedule a meeting with a professor or advisor</p>
            </div>

            <div class="form-section">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" placeholder="Enter your full name">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Student ID</label>
                        <input type="text" class="form-control" placeholder="Enter your student ID">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Department</label>
                        <select class="form-select">
                            <option selected disabled>Select department</option>
                            <option>Computer Studies</option>
                            <option>Business Administration</option>
                            <option>Education</option>
                            <option>Engineering</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Date & Time</label>
                        <input type="datetime-local" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Reason for Appointment</label>
                        <textarea class="form-control" rows="4" placeholder="Briefly explain the purpose of this appointment"></textarea>
                    </div>

                    <button type="submit" class="btn btn-submit">Submit Request</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
