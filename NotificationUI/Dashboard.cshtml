@{
    Layout = null;
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dashboard - Taguig City University</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #1c1c1c;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }

        .sidebar {
            background-color: #f5f5f5;
            padding: 50px 30px;
            min-height: 100vh;
            width: 270px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.05);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .sidebar img {
                width: 160px;
                margin-bottom: 60px;
            }

            .sidebar a {
                display: block;
                width: 100%;
                margin-bottom: 30px;
                text-decoration: none;
                font-weight: bold;
                font-size: 1.1rem;
                padding: 16px;
                text-align: center;
                border-radius: 12px;
                border: 2px solid #7c0a02;
                color: #7c0a02;
                transition: all 0.3s ease;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    background-color: #7c0a02;
                    color: white;
                }

        .content {
            background-color: #ffffff;
            margin-left: 30px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .header {
            background-color: #7c0a02;
            color: white;
            padding: 40px;
            text-align: center;
        }

        .dashboard-section {
            padding: 40px;
        }

        .card-box {
            background-color: #f5f5f5;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 3px 8px rgba(0,0,0,0.05);
            text-align: center;
            transition: all 0.3s ease;
        }

            .card-box:hover {
                background-color: #eaeaea;
            }

        .card-title {
            font-size: 1.4rem;
            font-weight: bold;
            color: #7c0a02;
        }

        .card-number {
            font-size: 2rem;
            font-weight: bold;
            color: #1c1c1c;
            margin-top: 10px;
        }

        .section-title {
            font-size: 1.3rem;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .quick-actions {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
        }

            .quick-actions .btn {
                flex: 1;
                min-width: 180px;
                padding: 15px;
                font-size: 1rem;
                font-weight: 500;
            }

        .activity-feed {
            background-color: #f9f9f9;
            padding: 25px;
            border-radius: 12px;
            border: 1px solid #ddd;
        }

        .activity-item {
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
        }

            .activity-item:last-child {
                border-bottom: none;
            }

        .activity-time {
            font-size: 0.85rem;
            color: #666;
        }

        .row > .col-md-4 {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <img src="~/images/TCU icon.png" alt="TCU Logo" />
            <a href="~/Home">HOME</a>
            <a class="active" href="Dashboard">DASHBOARD</a>
            <a href="Notification1">NOTIFICATION</a>
            <a href="Messages">MESSAGES</a>
            <a href="Assignment">ASSIGNMENT</a>
            <a href="Parentfeedback">PARENT-FEEDBACK</a>
            <a href="#">LOGOUT</a>
        </div>

        <!-- Content -->
        <div class="content">
            <div class="header">
                <h2>Welcome to your Dashboard</h2>
                <p>Quick overview and latest activity</p>
            </div>

            <div class="dashboard-section container">
                <!-- Top Cards -->
                <div class="row">
                    <div class="col-md-4">
                        <div class="card-box">
                            <div class="card-title">Unread Messages</div>
                            <div class="card-number">5</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card-box">
                            <div class="card-title">Upcoming Assignments</div>
                            <div class="card-number">3</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card-box">
                            <div class="card-title">New Notifications</div>
                            <div class="card-number">4</div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="mt-5">
                    <div class="section-title">Quick Actions</div>
                    <div class="quick-actions">
                        <a href="Viewgrades" class="btn btn-dark">View Grades</a>
                        <a href="Setappointment" class="btn btn-outline-dark">Set Appointment</a>
                        <a href="Checksched" class="btn btn-outline-dark">Check Schedule</a>
                        <a href="UploadDocuments" class="btn btn-dark">Upload Documents</a>
                    </div>
                </div>

                <!-- Recent Activity Feed -->
                <div class="mt-5">
                    <div class="section-title">Recent Activity</div>
                    <div class="activity-feed">
                        <div class="activity-item">
                            <strong>English Essay</strong> submitted successfully.
                            <div class="activity-time">10 minutes ago</div>
                        </div>
                        <div class="activity-item">
                            <strong>Viewed Notification:</strong> "Appointment Request"
                            <div class="activity-time">45 minutes ago</div>
                        </div>
                        <div class="activity-item">
                            <strong>Message from Mr. Santos</strong> marked as read.
                            <div class="activity-time">2 hours ago</div>
                        </div>
                        <div class="activity-item">
                            <strong>Assignment: Math Homework</strong> downloaded.
                            <div class="activity-time">Yesterday</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
